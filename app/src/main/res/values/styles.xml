<resources>

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="PopupWindowAnimationLT">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim_from_left_top</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hide_anim_from_left_top</item>
    </style>
    <style name="PopupWindowAnimationRT">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim_from_right_top</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hide_anim_from_right_top</item>
    </style>
    <style name="PopupWindowAnimationRB">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim_from_right_bottom</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hide_anim_from_right_bottom</item>
    </style>
    <style name="PopupWindowAnimationLB">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim_from_left_bottom</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hide_anim_from_left_bottom</item>
    </style>
</resources>
